<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="700.0" spacing="15.0" style="-fx-background-color: #f4f7f6;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="DashboardFuncionarioController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label fx:id="welcomeLabel" text="Bem-vindo(a), [Nome do Funcionário]!">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Label text="Minhas Instalações Atribuídas">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <TableView fx:id="instalacoesTable" prefHeight="200.0">
        <columns>
          <TableColumn fx:id="clienteColumn" prefWidth="150.0" text="Cliente" />
          <TableColumn fx:id="enderecoColumn" prefWidth="250.0" text="Endereço" />
          <TableColumn fx:id="dataInicioColumn" prefWidth="120.0" text="Data de Início" />
          <TableColumn fx:id="statusColumn" prefWidth="150.0" text="Status" />
        </columns>
      </TableView>
      
      <Button onAction="#handleMinhasManutencoes" prefHeight="40.0" prefWidth="250.0" text="Visualizar Minhas Manutenções" />
      
      <Button onAction="#handleLogout" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #d32f2f; -fx-text-fill: white;" text="Logout" />
   </children>
</VBox>