<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" style="-fx-background-color: #f4f7f6;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="AcompanharInstalacaoController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label text="Acompanhamento da Instalação" textFill="#0d47a1">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <GridPane hgap="10" vgap="10">
        <columnConstraints>
        </columnConstraints>
        <rowConstraints>
        </rowConstraints>
         <children>
            <Label text="Status Atual:" style="-fx-font-weight: bold;" GridPane.rowIndex="0" />
            <Label fx:id="statusLabel" text="[Status]" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            
            <Label text="Endereço:" style="-fx-font-weight: bold;" GridPane.rowIndex="1" />
            <Label fx:id="enderecoLabel" text="[Endereço]" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            
            <Label text="Responsável:" style="-fx-font-weight: bold;" GridPane.rowIndex="2" />
            <Label fx:id="responsavelLabel" text="[Funcionário]" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            
            <Label text="Data de Início:" style="-fx-font-weight: bold;" GridPane.rowIndex="3" />
            <Label fx:id="dataInicioLabel" text="[Data]" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         </children>
      </GridPane>
      <ProgressBar fx:id="progressBar" prefWidth="400.0" progress="0.0" />
      <Button onAction="#handleVoltar" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #757575; -fx-text-fill: white;" text="Voltar" />
   </children>
</VBox>