<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="450.0" prefWidth="600.0" spacing="15.0" style="-fx-background-color: #ECEFF1;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="DashboardGerenteController">
   <padding>
      <Insets top="30.0" />
   </padding>
   <children>
      <Label text="Painel Administrativo" textFill="#37474F" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
      
      <Button onAction="#handleGerenciarOrcamentos" prefHeight="40.0" prefWidth="250.0" style="-fx-background-color: #546E7A; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="Gerenciar Orçamentos" />
      
      <Button onAction="#handleGerenciarInstalacoes" prefHeight="40.0" prefWidth="250.0" style="-fx-background-color: #546E7A; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="Gerenciar Instalações" />
      
      <Button onAction="#handleGerenciarFuncionarios" prefHeight="40.0" prefWidth="250.0" style="-fx-background-color: #546E7A; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="Gerenciar Funcionários" />
      
      <Button onAction="#handleVisualizarManutencoes" prefHeight="40.0" prefWidth="250.0" style="-fx-background-color: #546E7A; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="Visualizar Manutenções" />
      
      <Button onAction="#handleLogout" prefHeight="40.0" prefWidth="250.0" style="-fx-background-color: #d32f2f; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" text="Logout" />
   </children>
</VBox>